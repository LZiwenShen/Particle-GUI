{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CodeLLDB Launch",
            "type": "lldb",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopOnEntry": false,
            "cwd": "${command:cmake.launchTargetDirectory}",
            "env": {
                "PATH": "${env:PATH};${command:cmake.launchTargetDirectory}"
            },
            "terminal": "integrated"
        },
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${command:cmake.launchTargetDirectory}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "${env:PATH};${command:cmake.launchTargetDirectory}"
                }
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "(MacOS) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${command:cmake.launchTargetDirectory}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "${env:PATH};${command:cmake.launchTargetDirectory}"
                }
            ],
            "externalConsole": false,
            "MIMode": "lldb"
        }
    ]
}